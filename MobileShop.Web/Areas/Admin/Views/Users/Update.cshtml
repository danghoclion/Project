@model MobileShop.Web.Areas.Admin.Models.UserDTO
@using MobileShop.Core.Helper;
@using MobileShop.Core.Repositories.IRepository;
@inject IUnitOfWork unitOfWork
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var roles = new List<string>()
    {
        SD.Role_User, SD.Role_Employee, SD.Role_Owner
    };
    SelectList listItems = new SelectList(roles, "Role");
}
<partial name="_AlertNoti" />
<div class="container mt-5">
    <h2>Cập nhật thông tin người dùng</h2>
    <form action="Update" method="post" enctype="multipart/form-data">
        <input type="text" name="Id" hidden value="@Model.Id"/>
        <div class="form-group">
            <label for="Name">Tên người dùng</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" disabled>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email"value="@Model.Email" disabled>
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input type="password" class="form-control" id="Password" name="Password">
        </div>
        <div class="form-group">
            <label for="role">Loại tài khoản</label> <br />
            <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Role" name="Role" asp-items="listItems"></select>
        </div>

        <!-- Add more form groups for other properties -->
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
