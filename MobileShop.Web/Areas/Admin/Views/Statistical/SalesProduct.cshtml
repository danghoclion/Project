@{
    ViewData["Title"] = "Sales";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<form action="/Admin/Statistical/sales" method="get">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="start_date">Ngày bắt đầu:</label>
                    <input type="datetime-local" id="start_date" name="start" class="form-control">
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label for="end_date">Ngày kết thúc:</label>
                    <input type="datetime-local" id="end_date" name="end" class="form-control">
                </div>
                <div class="form-group">
                    <button style="position: absolute; margin: -37px 580px" type="submit" class="btn btn-primary">Lọc</button>
                </div>
            </div>
        </div>
    </div>
</form>
<br />
<br />
<div class="container">
    <div id="chartContainer3" style="width: 100%; height: 500px;display: inline-block;"></div><br /><br />
</div>

<script type="text/javascript">
    var chart3 = new CanvasJS.Chart("chartContainer3", {
        animationEnabled: true,
        title: {
            text: "Biểu đồ số lượng sản phẩm bán ra",
            family: "Time New Roman"
        },
        axisX: {
            valueFormatString: "MMM",
            interval: 1,
            intervalType: "month"
        },
        axisY: {
            includeZero: false
        },
        data: [
            {
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoint)
                }
        ]
    });
    chart3.render();
</script>