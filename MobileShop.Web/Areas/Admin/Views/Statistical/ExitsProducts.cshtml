@{
    ViewData["Title"] = "Sales";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div id="chartContainer1" style="width: 100%; height: 800px;display: inline-block;"></div><br /><br />
</div>

<br />
<br />

<div class="container">
    <div id="chartContainer2" style="width: 100%; height: 800px;display: inline-block;"></div><br /><br />
</div>

<script type="text/javascript">
    var chart1 = new CanvasJS.Chart("chartContainer1", {
        animationEnabled: true,
        title: {
            text: "Biểu đồ hàng tồn",
            family: "Time New Roman"
        },
        axisX: {
            valueFormatString: "MMM",
            interval: 1,
            intervalType: "month"
        },
        axisY: {
            includeZero: false
        },
        data: [
            {
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DtPoint)
                    }
        ]
    });
    chart1.render();

    var chart2 = new CanvasJS.Chart("chartContainer2", {
        exportEnabled: true,
        animationEnabled: true,
        title: {
            text: "Tỉ lệ mặt hàng",
        },
        data: [
            {
                type: "pie",
                startAngle: 180,
                toolTipContent: "<b>{label}</b>: {y}%",
                showInLegend: "true",
                legendText: "{label}",
                indexLabel: "{label} - {y}%",
                dataPoints: @Html.Raw(ViewBag.DataPoint2)
                },
        ]
    });
    chart2.render();
</script>
